<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ruchika.corralnewactivities.FoodPartners"
    android:id="@+id/rellayoutfoodpartner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intersted in Cuisine Type:"
        android:id="@+id/txtcuisinetype"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgfoodtype"
        android:layout_below="@+id/txtcuisinetype"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Indian"
            android:id="@+id/radioButtonnindian"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:id="@+id/radioButtonchinese"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:id="@+id/radioButtonitalian"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cakes"
            android:id="@+id/radioButtoncakes"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:id="@+id/radioButtonothers"
            android:checked="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editothertype"
            android:inputType="text"
            android:hint="Mention your food type"
            android:layout_below="@+id/rgfoodtype"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Interested in :"
        android:id="@+id/txtplace"
        android:layout_below="@+id/rgfoodtype"
        android:layout_alignRight="@+id/txtminorder"
        android:layout_alignEnd="@+id/txtminorder"
        android:layout_marginTop="55dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editplace"
        android:layout_alignRight="@+id/rgfoodtype"
        android:layout_alignEnd="@+id/rgfoodtype"
        android:layout_toEndOf="@+id/txtplace"
        android:layout_toRightOf="@+id/txtplace"
        android:layout_below="@+id/rgfoodtype"
        android:layout_above="@+id/txtminorder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Order :"
        android:id="@+id/txtminorder"
        android:layout_below="@+id/txtplace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editminorder"
        android:layout_alignBottom="@+id/txtminorder"
        android:layout_alignLeft="@+id/editplace"
        android:layout_alignStart="@+id/editplace"
        android:layout_alignRight="@+id/editplace"
        android:layout_alignEnd="@+id/editplace" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send "
        android:onClick="sendrequest"
        android:id="@+id/btnsend"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtcuisinetype"
        android:layout_alignEnd="@+id/txtcuisinetype" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btnclear"
        android:layout_alignTop="@+id/btnsend"
        android:layout_toRightOf="@+id/btnsend"
        android:layout_alignRight="@+id/editminorder"
        android:layout_alignEnd="@+id/editminorder" />

</RelativeLayout>
